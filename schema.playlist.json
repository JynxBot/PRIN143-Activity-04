{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/schema.playlist.json",
    "title": "playlist",
    "description": "Playlist for Music",
    "type": [
        "object",
        "array"
    ],
    "items": {
        "properties": {
            "title": {
                "type": "string",
                "description": "Title of the song",
                "minLength": 1,
                "maxLength": 20
            },
            "artist": {
                "type": "string",
                "description": "string",
                "minLength": 1,
                "maxLength": 20
            },
            "album": {
                "type": "string",
                "description": "Album of the song",
                "minLength": 1,
                "maxLength": 20
            },
            "releaseYear": {
                "type": "integer",
                "exclusiveMinimum": 1990,
                "exclusiveMaximum": 2025
            },
            "duration": {
                "type": "object",
                "properties": {
                    "minutes": {
                        "type": "integer",
                        "exclusiveMinimum": 0
                    },
                    "seconds": {
                        "type": "integer",
                        "exclusiveMinimum": 0
                    }
                }
            },
            "statistics": {
                "type": "object",
                "description": "Songs statistics",
                "properties": {
                    "plays": {
                        "type": "integer",
                        "exclusiveMinimum": 0
                    },
                    "likes": {
                        "type": "integer",
                        "exclusiveMinimum": 0
                    },
                    "shares": {
                        "type": "integer",
                        "exclusiveMinimum": 0
                    }
                }
            },
            "inDevice": {
                "type": [
                    "boolean",
                    "null"
                ]
            },
            "platforms": {
                "enum": [
                    "Spotify",
                    "AppleMusic",
                    "Youtube"
                ]
            }
        },
        "required": [
            "title",
            "artist",
            "album",
            "releaseYear",
            "duration",
            "statistics",
            "inDevice",
            "platforms"
        ]
    }
}